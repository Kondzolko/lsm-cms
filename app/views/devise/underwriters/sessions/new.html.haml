.p-3.w-100
  .mb-3.text-center
    = link_to root_path, class: 'link-fx text-success font-w700 font-size-h1' do
      %span.text-dark LSM
      %span.text-success UW
    %p.text-uppercase.font-w700.font-size-sm.text-muted Sign in
  .row.no-gutters.justify-content-center
    .col-sm-8.col-xl-6
      = simple_form_for resource, as: resource_name, url: session_path(resource_name),
        wrapper_mappings: { boolean: :custom_boolean } do |f|
        .form-inputs
          = f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email" }
          = f.input :password,
            required: false,
            input_html: { autocomplete: "current-password" }
          = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .form-actions.pb-2
          = f.button :submit, "Sing in", class: 'btn btn-block btn-hero-lg btn-hero-success'
      = render "devise/underwriters/shared/links"
