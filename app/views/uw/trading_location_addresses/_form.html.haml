= simple_form_for [:uw, :coverholder, trading_location_address] do |f|
  = f.input :country, as: :string
  = f.input :address_line_1
  = f.input :address_line_2
  = f.input :state
  .form-group.form-row
    .col-8
      = f.input :city
    .col-4
      = f.input :zip
  = f.input :phone
  .form-group
    = f.submit 'Save', class: 'btn btn-success'
  .form-group
    = link_to 'Create Coverholder', uw_coverholder_path(trading_location_address.coverholder), class: 'btn btn-success'
